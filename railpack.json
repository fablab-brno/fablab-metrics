{
	"provider": "node",
	"packages": {
		"node": "24",
		"python": "3.11",
		"poetry": "2.2.1"
	},
	"steps": {
		"python-install": {
			"commands": [
				{ "src": "pyproject.toml", "dest": "pyproject.toml" },
				{ "src": "poetry.lock", "dest": "poetry.lock" },
				"poetry config virtualenvs.in-project true",
				"poetry install",
				"ls /app",
				"ls /app/.venv"
			]
		},
		"install": {
			"inputs": [
				{ "step": "python-install" },
				{ "src": "/app/.venv", "dest": "/app/.venv" },
				"..."
			],
			"commands": [
				"apt-get update",
				"apt-get install curl",
				"mise uninstall poetry@2.2.1",
				"mise install poetry@2.2.1",
				"..."
			]
		}
	}
}