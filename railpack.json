{
	"provider": "node",
	"packages": {
		"node": "24",
		"python": "3.13"
	},
	"steps": {
		"python-install": {
			"commands": [
				{ "src": "pyproject.toml", "dest": "pyproject.toml" },
				"pip install poetry",
				"poetry config virtualenvs.in-project true",
				"poetry install",
				"poetry show -v",
				"poetry env info -p"
			]
		},
		"install": {
			"inputs": [
				{ "step": "python-install" }
			],
			"commands": ["..."]
		}
	}
}