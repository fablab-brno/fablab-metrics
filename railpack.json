{
	"provider": "node",
	"packages": {
		"node": "24",
		"python": "3.11",
		"poetry": "latest"
	},
	"steps": {
		"python-install": {
			"commands": [
				{ "src": "pyproject.toml", "dest": "pyproject.toml" },
				{ "src": "poetry.lock", "dest": "poetry.lock" },
				"apt-get update",
				"apt-get install libexpat1"
			]
		}
	},
	"deploy": {
		"inputs": [
			"...",
			{ "step": "python-install" }
		]
	}
}