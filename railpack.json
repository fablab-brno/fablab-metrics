{
	"provider": "node",
	"packages": {
		"node": "24",
		"python": "3.13"
	},
	"steps": {
		"install": {
			"commands": ["..."]
		},
		"python-install": {
			"inputs": [{ "step": "install" }],
		  "commands": [
			  { "src": "pyproject.toml", "dest": "pyproject.toml" },
			  { "src": "package.json", "dest": "package.json" },
			  "ls",
			"pip install poetry",
			"poetry install"
		  ]
		},
		"build": {
			"inputs": [{ "step": "python-install" }],
			"commands": ["..."]
		}
	}
}