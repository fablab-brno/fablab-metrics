{
	"provider": "node",
	"packages": {
		"node": "24",
		"python": "3.13"
	},
	"steps": {
		"python-install": {
			"commands": [
				{ "src": "pyproject.toml", "dest": "pyproject.toml" },
				"pip install poetry",
				"poetry install"
			]
		},
		"build": {
			"inputs": [
				{ "step": "install" },
				{ "step": "python-install" }
			]
		}
	}
}